<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.karmazin.controller.LoginScreen">
	<children>
		<HBox alignment="CENTER_RIGHT"
		      layoutX="145.0"
		      layoutY="149.0"
		      prefHeight="51.0"
		      prefWidth="311.0"
		      style="-fx-spacing: 15; -fx-padding: 10;">
			<children>
				<Label text="Login:"/>
				<TextField fx:id="loginLoginTextfield"/>
			</children>
		</HBox>
		<HBox alignment="CENTER_RIGHT"
		      layoutX="145.0"
		      layoutY="200.0"
		      prefHeight="51.0"
		      prefWidth="311.0"
		      style="-fx-spacing: 15; -fx-padding: 10;">
			<children>
				<Label text="Password:"/>
				<PasswordField id="loginPasswordField"
				               fx:id="loginPasswordPassfield"/>
			</children>
		</HBox>
		<Label layoutX="232.0"
		       layoutY="116.0"
		       text="Authorization">
			<font>
				<Font name="Lobster"
				      size="25.0"/>
			</font>
		</Label>
		<ImageView fitHeight="64.0"
		           fitWidth="66.0"
		           layoutX="28.0"
		           layoutY="26.0"
		           pickOnBounds="true"
		           preserveRatio="true">
			<image>
				<Image url="/pngs/PapichLogo.png"/>
			</image>
		</ImageView>
		<Button id="loginRegistrationButton"
		        fx:id="loginRegButton"
		        layoutX="319.0"
		        layoutY="267.0"
		        mnemonicParsing="false"
		        text="Registration"/>
		<Button id="loginSignInButton"
		        fx:id="loginSignInButton"
		        defaultButton="true"
		        layoutX="199.0"
		        layoutY="267.0"
		        mnemonicParsing="false"
		        text="Sign In"/>
	</children>
</AnchorPane>
